{
  "crons": [
    {
      "path": "/api/sync/renew-webhooks",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "src/routes/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
